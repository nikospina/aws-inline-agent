<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <version>${revision}</version>
    <groupId>com.gen.xsell.bp</groupId>
    <artifactId>gen-xsell-bp-microservice</artifactId>
    <name>gen-xsell-bp-microservice</name>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.5.3</version>
        <relativePath/>
    </parent>

    <properties>
        <revision>AUTOUPDATED_BACKEND_VERSION</revision>
        <java.version>21</java.version>
        <dbinfo.dbtype>mysql</dbinfo.dbtype>
        <keystore.file>file</keystore.file>
        <keystore.alias>alias</keystore.alias>
        <keystore.storepass>xxx</keystore.storepass>
        <keystore.keypass>xxx</keystore.keypass>
        <sonar.exclusions>**/*.java</sonar.exclusions>

        <!-- XSELL dependency versions -->
        <cobis-xsell-bp-service.version>9.1.2</cobis-xsell-bp-service.version>
        <cobis-cloud-infrastructure.version>3.3.3</cobis-cloud-infrastructure.version>
        <cobis-xsell-bpm-engine-service.version>8.1.0</cobis-xsell-bpm-engine-service.version>
        <cobis-xsell-collaterals-service.version>8.0.1</cobis-xsell-collaterals-service.version>
        <cobis-xsell-customers-service.version>8.2.0</cobis-xsell-customers-service.version>
        <cobis-xsell-loans-service.version>8.1.1</cobis-xsell-loans-service.version>
        <cobis-xsell-admin.version>8.0.0</cobis-xsell-admin.version>
        <cobis-xsell-fpm.version>8.3.0</cobis-xsell-fpm.version>
        <cobis-xsell-dda-service.version>8.0.0</cobis-xsell-dda-service.version>
        <cobis-xsell-ftd.integration.version>2.0.1</cobis-xsell-ftd.integration.version>
        <core.version>1.0.2</core.version>

        <!-- Dependency versions - ACTUALIZADAS PARA CORREGIR VULNERABILIDADES -->
        <aws-java-sdk-xray.version>2.18.2</aws-java-sdk-xray.version>
        <aws-java-sdk.v1.version>1.12.779</aws-java-sdk.v1.version>
        <aws-java-sdk.version>2.27.14</aws-java-sdk.version>
        <test-containers.version>1.20.4</test-containers.version>
        <!-- commons-lang 2.6 actualizado a 3.18.0 (migrar de commons-lang a commons-lang3) -->
        <commons-lang3.version>3.18.0</commons-lang3.version>
        <aws-secretsmanager-jdbc.version>1.0.9</aws-secretsmanager-jdbc.version>
        <jackson-dataformat-xml.version>2.11.1</jackson-dataformat-xml.version>
        <!-- Versiones actualizadas para vulnerabilidades -->
        <mysql-connector-j.version>9.3.0</mysql-connector-j.version>
        <nimbus-jose-jwt.version>10.0.2</nimbus-jose-jwt.version>
        <reactor-netty.version>1.2.8</reactor-netty.version>
    </properties>
    <description>Business Process Microservice</description>
    <dependencies>
        <dependency>
            <artifactId>cobis-xsell-bp-bsl-api</artifactId>
            <groupId>com.cobis.xsell.bp</groupId>
            <version>${cobis-xsell-bp-service.version}</version>
        </dependency>
        <dependency>
            <artifactId>cobis-xsell-bp-bsl-impl</artifactId>
            <groupId>com.cobis.xsell.bp</groupId>
            <version>${cobis-xsell-bp-service.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>com.cobiscorp.cobis</groupId>
                    <artifactId>cobis-commons</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>com.cobis.xsell.businessprocess</groupId>
                    <artifactId>cobis-xsell-businessprocess-bsl-impl</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>com.cobis.xsell.bp</groupId>
            <artifactId>cobis-xsell-bp-loans-integration</artifactId>
            <version>${cobis-xsell-bp-service.version}</version>
        </dependency>
        <dependency>
            <groupId>com.cobis.xsell.bp</groupId>
            <artifactId>cobis-xsell-bp-microservice</artifactId>
            <version>${cobis-xsell-bp-service.version}</version>
        </dependency>

        <!-- Spring Boot dependencies -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter</artifactId>
            <exclusions>
                <exclusion>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-starter-logging</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-configuration-processor</artifactId>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-webflux</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-validation</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-log4j2</artifactId>
        </dependency>

        <!-- XSELL Infra dependencies -->
        <dependency>
            <groupId>com.cobis.cloud.infra</groupId>
            <artifactId>cobis-infra-security</artifactId>
            <version>${cobis-cloud-infrastructure.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>com.ibm</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>com.cobiscorp.cobis</groupId>
                    <artifactId>COBISComponentManager</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.apache.felix</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>dom4j</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.apache.geronimo.specs</groupId>
                    <artifactId>*</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>com.cobiscorp.cobis</groupId>
                    <artifactId>cobis-plugin-activator</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>com.cobis.xsell</groupId>
            <artifactId>cobis-xsell-logger-manager</artifactId>
            <version>${cobis-cloud-infrastructure.version}</version>
        </dependency>
        <dependency>
            <groupId>com.cobis.cloud.infra</groupId>
            <artifactId>cobis-xsell-rpc-executor-api</artifactId>
            <version>${cobis-cloud-infrastructure.version}</version>
        </dependency>
        <dependency>
            <groupId>com.cobis.cloud.infra</groupId>
            <artifactId>cobis-xsell-rpc-executor-impl</artifactId>
            <version>${cobis-cloud-infrastructure.version}</version>
        </dependency>
        <dependency>
            <groupId>com.cobis.xsell.commons</groupId>
            <artifactId>cobis-xsell-commons-pseudocatalogs</artifactId>
            <version>${cobis-cloud-infrastructure.version}</version>
        </dependency>
        <dependency>
            <groupId>com.cobis.cloud.infra</groupId>
            <artifactId>cobis-cloud-infra-microservice-healthcheck-mysql</artifactId>
            <version>${cobis-cloud-infrastructure.version}</version>
        </dependency>

        <!-- Database dependencies -->
        <dependency>
            <groupId>com.mysql</groupId>
            <artifactId>mysql-connector-j</artifactId>
            <!-- Versión controlada por dependencyManagement -->
        </dependency>
        <dependency>
            <groupId>com.amazonaws.secretsmanager</groupId>
            <artifactId>aws-secretsmanager-jdbc</artifactId>
            <version>${aws-secretsmanager-jdbc.version}</version>
        </dependency>
        <dependency>
            <groupId>jakarta.persistence</groupId>
            <artifactId>jakarta.persistence-api</artifactId>
        </dependency>

        <!-- Dependencia de liquibase para ejecutar backend -->
        <dependency>
            <groupId>com.cobis.xsell.bp</groupId>
            <artifactId>cobis-xsell-bp-backend-database-structure</artifactId>
            <version>${core.version}</version>
            <classifier>liquibase</classifier>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>com.cobis.xsell.bp</groupId>
            <artifactId>cobis-xsell-bp-backend-database-parametrization</artifactId>
            <version>${core.version}</version>
            <classifier>liquibase</classifier>
            <type>zip</type>
        </dependency>

        <!-- Test dependencies -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
            <exclusions>
                <exclusion>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-starter-logging</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>org.junit.vintage</groupId>
                    <artifactId>junit-vintage-engine</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>com.cobis.cloud.infra</groupId>
            <artifactId>cobis-integration-test-security-aws</artifactId>
            <version>${cobis-cloud-infrastructure.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.cobis.cloud.infra</groupId>
            <artifactId>cobis-integration-test-api</artifactId>
            <version>${cobis-cloud-infrastructure.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.cobis.cloud.infra</groupId>
            <artifactId>cobis-cloud-infra-microservice-commons</artifactId>
            <version>${cobis-cloud-infrastructure.version}</version>
        </dependency>
        <dependency>
            <groupId>org.testcontainers</groupId>
            <artifactId>mysql</artifactId>
            <version>${test-containers.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.testcontainers</groupId>
            <artifactId>junit-jupiter</artifactId>
            <version>${test-containers.version}</version>
            <scope>test</scope>
        </dependency>

        <!-- Other dependencies - MIGRACIÓN DE COMMONS-LANG A COMMONS-LANG3 -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <!-- Versión controlada por dependencyManagement -->
        </dependency>
        <dependency>
            <groupId>jakarta.servlet</groupId>
            <artifactId>jakarta.servlet-api</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.amazonaws</groupId>
                <artifactId>aws-xray-recorder-sdk-bom</artifactId>
                <version>${aws-java-sdk-xray.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>software.amazon.awssdk</groupId>
                <artifactId>bom</artifactId>
                <version>${aws-java-sdk.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>com.amazonaws</groupId>
                <artifactId>aws-java-sdk-bom</artifactId>
                <version>${aws-java-sdk.v1.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <!-- To exclude dependencies -->
            <dependency>
                <groupId>com.cobis.cloud.infra</groupId>
                <artifactId>cobis-xsell-rpc-executor-impl</artifactId>
                <version>${cobis-cloud-infrastructure.version}</version>
                <exclusions>
                    <exclusion>
                        <groupId>org.springframework.boot</groupId>
                        <artifactId>spring-boot-starter-web</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>com.cobis.cloud.infra</groupId>
                        <artifactId>cobis-xsell-rpc-executor-api</artifactId>
                    </exclusion>
                    <exclusion>
                        <groupId>com.cobis.cloud.infra</groupId>
                        <artifactId>cobis-cloud-infra-microservice-commons</artifactId>
                    </exclusion>
                </exclusions>
            </dependency>
            <dependency>
                <groupId>com.cobis.cloud.infra</groupId>
                <artifactId>cobis-xsell-rpc-executor-api</artifactId>
                <version>${cobis-cloud-infrastructure.version}</version>
                <exclusions>
                    <exclusion>
                        <groupId>org.springframework.boot</groupId>
                        <artifactId>spring-boot-starter-web</artifactId>
                    </exclusion>
                </exclusions>
            </dependency>
            
            <!-- CORRECCIONES DE VULNERABILIDADES EN DEPENDENCY MANAGEMENT -->
            
            <!-- 1. MySQL Connector J - Actualizado de 9.2.0 a 9.3.0 -->
            <dependency>
                <groupId>com.mysql</groupId>
                <artifactId>mysql-connector-j</artifactId>
                <version>${mysql-connector-j.version}</version>
            </dependency>
            
            <!-- 2. Nimbus JOSE JWT - Actualizado de 9.37.3 a 10.0.2 -->
            <dependency>
                <groupId>com.nimbusds</groupId>
                <artifactId>nimbus-jose-jwt</artifactId>
                <version>${nimbus-jose-jwt.version}</version>
            </dependency>
            
            <!-- 3. Reactor Netty HTTP - Actualizado de 1.2.7 a 1.2.8 -->
            <dependency>
                <groupId>io.projectreactor.netty</groupId>
                <artifactId>reactor-netty-http</artifactId>
                <version>${reactor-netty.version}</version>
            </dependency>
            <dependency>
                <groupId>io.projectreactor.netty</groupId>
                <artifactId>reactor-netty-core</artifactId>
                <version>${reactor-netty.version}</version>
            </dependency>
            
            <!-- 4. Commons Lang3 - Actualizado de 3.17.0 a 3.18.0 -->
            <dependency>
                <groupId>org.apache.commons</groupId>
                <artifactId>commons-lang3</artifactId>
                <version>${commons-lang3.version}</version>
            </dependency>
            
            <!-- Excluir commons-lang 2.6 completamente y usar solo commons-lang3 -->
            <dependency>
                <groupId>commons-lang</groupId>
                <artifactId>commons-lang</artifactId>
                <version>[0,)</version>
                <scope>provided</scope>
            </dependency>
            
            <!-- To avoid other vulnerabilities - Mantenidas del pom original -->
            <dependency>
                <groupId>com.google.guava</groupId>
                <artifactId>guava</artifactId>
                <version>33.3.1-jre</version>
            </dependency>
            <dependency>
                <groupId>org.yaml</groupId>
                <artifactId>snakeyaml</artifactId>
                <version>2.3</version>
            </dependency>
            <dependency>
                <groupId>commons-logging</groupId>
                <artifactId>commons-logging</artifactId>
                <version>1.3.4</version>
            </dependency>
            <dependency>
                <groupId>commons-io</groupId>
                <artifactId>commons-io</artifactId>
                <version>2.18.0</version>
            </dependency>
            <dependency>
                <groupId>org.apache.commons</groupId>
                <artifactId>commons-compress</artifactId>
                <version>1.27.1</version>
            </dependency>
            <dependency>
                <groupId>joda-time</groupId>
                <artifactId>joda-time</artifactId>
                <version>2.12.7</version>
            </dependency>
            <!-- Eliminar cuando se actualice el parent -->
            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-webmvc</artifactId>
                <version>6.2.1</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>
                            <groupId>com.ibm</groupId>
                            <artifactId>com.ibm.mq</artifactId>
                        </exclude>
                        <exclude>
                            <groupId>com.ibm</groupId>
                            <artifactId>com.ibm.mq.jmqi</artifactId>
                        </exclude>
                        <exclude>
                            <groupId>com.ibm</groupId>
                            <artifactId>*</artifactId>
                        </exclude>
                        <exclude>
                            <groupId>com.cobiscorp.cobis</groupId>
                            <artifactId>COBISComponentManager</artifactId>
                        </exclude>
                        <exclude>
                            <groupId>org.apache.felix</groupId>
                            <artifactId>*</artifactId>
                        </exclude>
                        <exclude>
                            <groupId>org.apache.geronimo.specs</groupId>
                            <artifactId>*</artifactId>
                        </exclude>
                        <exclude>
                            <groupId>com.cobiscorp.cobis</groupId>
                            <artifactId>cobis-plugin-activator</artifactId>
                        </exclude>
                        <exclude>
                            <groupId>com.cobiscorp.cts</groupId>
                            <artifactId>CTSServiceIntegration</artifactId>
                        </exclude>
                        <exclude>
                            <groupId>com.sybase.jdbc</groupId>
                            <artifactId>jconn</artifactId>
                        </exclude>
                        <exclude>
                            <groupId>com.cobiscorp.ecobis</groupId>
                            <artifactId>cobis-customer-commons-api</artifactId>
                        </exclude>
                        <exclude>
                            <groupId>javax.servlet</groupId>
                            <artifactId>javax.servlet-api</artifactId>
                        </exclude>
                        <exclude>
                            <groupId>org.hsqldb</groupId>
                            <artifactId>hsqldb</artifactId>
                        </exclude>
                        <exclude>
                            <groupId>org.apache.geronimo.specs</groupId>
                            <artifactId>geronimo-j2ee_1.4_spec</artifactId>
                        </exclude>
                        <exclude>
                            <groupId>org.freemarker</groupId>
                            <artifactId>freemarker</artifactId>
                        </exclude>
                        <exclude>
                            <groupId>org.apache.felix</groupId>
                            <artifactId>javax.servlet</artifactId>
                        </exclude>
                        <exclude>
                            <groupId>org.projectlombok</groupId>
                            <artifactId>lombok</artifactId>
                        </exclude>
                        <!-- Excluir commons-lang 2.6 del jar final -->
                        <exclude>
                            <groupId>commons-lang</groupId>
                            <artifactId>commons-lang</artifactId>
                        </exclude>
                    </excludes>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>